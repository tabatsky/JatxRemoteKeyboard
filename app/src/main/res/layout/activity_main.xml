    <LinearLayout
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height"
        android:background="@color/black"
        android:orientation="horizontal"
        >
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/action_bar_text_size"
            android:textColor="@color/white"
            android:textStyle="italic"
            android:gravity="center_vertical|left"
            android:text="@string/app_name"
            />
        
        <ImageView
            android:id="@+id/ic_wifi_no"
            android:layout_width="@dimen/action_bar_height"
            android:layout_height="@dimen/action_bar_height"
            android:src="@drawable/ic_wifi_no"
            android:scaleType="fitXY"
            />
    
        <ImageView
            android:id="@+id/ic_wifi_ok"
            android:layout_width="@dimen/action_bar_height"
            android:layout_height="@dimen/action_bar_height"
            android:src="@drawable/ic_wifi_ok"
            android:scaleType="fitXY"
            android:visibility="gone"
            />
        
        <View
            android:layout_width="@dimen/empty_1_width"
            android:layout_height="match_parent"
            />
        
        <ImageView
            android:id="@+id/ic_question"
            android:layout_width="@dimen/action_bar_height"
            android:layout_height="@dimen/action_bar_height"
            android:src="@drawable/ic_question"
            android:scaleType="fitXY"
            />
        
        <View
            android:layout_width="@dimen/empty_1_width"
            android:layout_height="match_parent"
            />
        
        <TextView
            android:id="@+id/exit_button"
            android:layout_width="@dimen/exit_button_width"
            android:layout_height="match_parent"
            android:background="@color/red1"
            android:textSize="@dimen/action_bar_text_size"
            android:textStyle="bold"
            android:gravity="center"
            android:text="@string/exit"
            />
        
    </LinearLayout>
    
